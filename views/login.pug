extends layout

block content
    .row
        .loginRegisterForm
            h3 Logowanie
            form(role='form', action="/login", method="post")
                .form-group
                    input.form-control(type='text', name="username", placeholder='Nazwa użytkownika')
                .form-group
                    input.form-control(type='password', name="password", placeholder='Hasło')
                button.btn.btn-default(type='submit') Zaloguj 
            p.formError #{error}     