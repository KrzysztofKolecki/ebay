extends layout

block content
    .row
        .loginRegisterForm
            h3 Rejestracja
            form(role='form', action='/register',method='post')
                .form-group
                    input.form-control(type='text', name='username', placeholder='Nazwa użytkownika')
                .form-group
                    input.form-control(type='password', name='password', placeholder='Hasło')

                button.btn.btn-default(type='submit') Zarejestruj
            p.formError #{error}    
